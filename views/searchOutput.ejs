<% if (topHit != undefined) { %>
    <h3>Top Hit</h3>

    <div onclick="openPage('<%= topHit.page %>')" class="searchItem searchTopHit selected">
        <p><%= topHit.name %></p>
    
        <p class="searchDescription"><%- topHit.description %></p>
    </div>
<% } %>

<% if (inCV.length != 0) { %>
    <h3>in the year <%= searchTerm %> I did</h3>

    <% inCV.forEach(function(item, index) { %>
        <div onclick="openPage('<%= item.page %>')" class="searchItem searchTopHit selected">
            <p><%= item.name %></p>
        
            <p class="searchDescription"><%- item.description %></p>
        </div>
    <% });  %> 
<% } %>

<% if (blogSearch.length > 0) { %>
    <h3>Blog</h3>
    <% blogSearch.forEach(function(item, index) { %>
        <div class="searchItem">
            <p onclick="openPage('<%= item.item.page %>')"><%= item.item.heading %></p>
        </div>
    <% });  %> 
<% } %>
<% if (pageSearch.length > 0) { %>
    <h3>Pages</h3>
    <% pageSearch.forEach(function(item, index) { %>
        <div class="searchItem">
            <p onclick="openPage('<%= item.item.page %>')"><%= item.item.name %></p>
        </div>
    <% });  %> 
<% } %>
<% if (cvSearch.length > 0) { %>
    <h3>CV</h3>
    <% cvSearch.forEach(function(item, index) { %>
        <div class="searchItem">
            <p onclick="openPage('<%= item.item.page %>')"><%= item.item.name %></p>

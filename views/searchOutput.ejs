    <% });  %> 
<% } %>

<% if (podcastSearch.length > 0) { %>
    <h3>Podcast</h3>
    <% podcastSearch.forEach(function(item, index) { %>
        <div class="searchItem">
            <p onclick="openPage('<%= item.item.page %>')"><%= item.item.name %></p>
        </div>
    <% });  %> 
<% } %>

<% if (emptySearch) { %>
    
    <div class="searchNoResult">
        <p>Sorry, but your search has no results</p>
    
    </div>
<% } %>